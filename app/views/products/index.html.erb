<% content_for :cabecera do%>
  Listing Products
<%end%>

<table>
  <tr>
    <th>Title</th>
    <th>Price</th>
    <th>Available</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
</tr>
<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.price %></td>
    <td><%= product.available %></td>
    <td><%= product.type.name %></td>
    <td><%= link_to 'Show', product, :class => 'esd' %></td>
    <td><%= link_to 'Edit', edit_product_path(product), :class => 'esd' %></td>
    <td><%= link_to 'Delete', product, :class => 'esd', confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

