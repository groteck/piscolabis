    </tr>
    <%if @users %>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.first_name%></td>
            <td><%= user.second_name%></td>
            <td><%= user.adress%></td>
            <td><%= user.phone%></td>
            <td><%= user.email%></td>
            <td><%= user.ugroupe.name%></td>
